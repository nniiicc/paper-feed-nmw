{
  "manifest_version": 3,
  "name": "Academic Paper Tracker",
  "version": "2.0.0",
  "description": "Track and annotate academic papers from various sources",
  "permissions": [
    "tabs",
    "storage",
    "webNavigation",
    "scripting",
    "activeTab"
  ],
  "host_permissions": [
    "*://*.arxiv.org/*",
    "*://export.arxiv.org/*",
    "*://*.openreview.net/*",
    "*://api.github.com/*",
    "<all_urls>"
  ],
  "background": {
    "service_worker": "dist/background.bundle.js",
    "scripts": ["dist/background.bundle.js"],
    "type": "module"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "academic-paper-tracker@paper-feed",
      "strict_min_version": "128.0"
    }
  },
  "content_scripts": [{
    "matches": ["<all_urls>"],
    "js": ["dist/content-script.js"],
    "run_at": "document_end"
  }],
  "action": {
    "default_popup": "popup.html"
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": false
  }
}
